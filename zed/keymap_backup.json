// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-t": "workspace::ToggleBottomDock",
      "ctrl-e": "project_panel::ToggleFocus",
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"]
    }
  },
  {
    "context": "ProjectPanel",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-n": "project_panel::NewFile",
      "cmd-d": "project_panel::Duplicate",
      "shift-cmd-n": "project_panel::NewDirectory"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-y": "assistant::ToggleFocus",
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-t": "workspace::ToggleBottomDock",
      "ctrl-e": "project_panel::ToggleFocus",
      "ctrl-s": "outline_panel::ToggleFocus",
      "space q": "pane::CloseActiveItem",
      "space /": "pane::DeploySearch",
      "#": "editor::SelectAllMatches", // Select all occurrences of current word
      "space ;": "workspace::Save",
      "space f": "file_finder::Toggle",
      "shift-h": "pane::ActivatePrevItem",
      "shift-l": "pane::ActivateNextItem",
      "space s": "outline::Toggle",
      "space S": "project_symbols::Toggle",
      "g d": "editor::GoToDefinition",
      "space r": "editor::FindAllReferences",
      "space i": "editor::GoToImplementation",
      "space R": "editor::Rename",
      "space k": "editor::Hover",
      "space d": "diagnostics::Deploy",
      "shift-k": "editor::MoveLineUp",
      "shift-j": "editor::MoveLineDown"
    }
  }
]
